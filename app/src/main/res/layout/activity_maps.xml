<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcvEditor"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:tag="fragment_maps"
        android:layout_width="768dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnWay"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Way"
        android:background="@color/cyan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/fcvEditor"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBoundary"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Boundary"
        android:background="@color/red"
        app:layout_constraintTop_toBottomOf="@id/btnWay"
        app:layout_constraintStart_toEndOf="@id/fcvEditor"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnObstacle"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Obstacle"
        android:background="@color/green"
        app:layout_constraintTop_toBottomOf="@id/btnBoundary"
        app:layout_constraintStart_toEndOf="@id/fcvEditor"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@+id/btnObstacle"
        app:layout_constraintStart_toStartOf="@+id/btnObstacle"
        app:layout_constraintEnd_toEndOf="@+id/btnObstacle"
        android:layout_marginTop="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"
        app:layout_constraintTop_toBottomOf="@+id/btnSave"
        app:layout_constraintStart_toStartOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="@+id/btnSave"
        android:layout_marginTop="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvPaths"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/btnWay"
        app:layout_constraintTop_toTopOf="@+id/btnWay"
        android:layout_marginStart="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtCurrentPathName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Path: Unnamed"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLoad"
        app:layout_constraintStart_toStartOf="@+id/btnWay" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtEnterPathName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Path Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCurrentPathName"
        app:layout_constraintStart_toStartOf="@+id/txtCurrentPathName"
        app:layout_constraintEnd_toEndOf="@+id/txtCurrentPathName" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtEnterPathName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Path Name Here"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEnterPathName"
        app:layout_constraintStart_toStartOf="@id/txtEnterPathName"
        app:layout_constraintEnd_toEndOf="@id/txtEnterPathName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPathNameOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edtEnterPathName"
        app:layout_constraintStart_toStartOf="@id/edtEnterPathName"
        app:layout_constraintEnd_toEndOf="@id/edtEnterPathName" />


</androidx.constraintlayout.widget.ConstraintLayout>